<element extends="NodeFormElement">
    <properties group="title" title="Заголовок">
        <property code="title" name="Текст" editor="text" />
        <property code="titleColor" name="Цвет заголовка" editor="color" />
        <property code="titleFont" name="Шрифт заголовка" editor="font" />
        <property code="titleOffset" name="Смещение заголовка" editor="integer" />
        <property code="titlePosition" name="Позиция заголовка" editor="enum">
            <variants>
                <variant value="TOP_LEFT">Левая</variant>
                <variant value="TOP_CENTER">Центральная</variant>
                <variant value="TOP_RIGHT">Правая</variant>
            </variants>
        </property>
    </properties>
    <properties>
        <property code="backgroundColor" name="Цвет фона" editor="color" />
        <property code="borderWidth" name="Размер окантовки" editor="float" />
        <property code="borderColor" name="Цвет окантовки" editor="color" />
        <property code="borderStyle" name="Стиль окантовки" editor="enum">
            <variants>
                <variant value="NONE">Без окантовки</variant>
                <variant value="SOLID">Линия</variant>
                <variant value="DOTTED">Точки</variant>
                <variant value="DASHED">Прерывистая линия</variant>
            </variants>
        </property>
        <property code="borderRadius" name="Радиус окантовки" editor="float" />
    </properties>
</element>