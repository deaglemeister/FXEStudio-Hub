<element extends="NodeFormElement">
    <properties>
        <property code="initial" name="Начальное значение" editor="integer" />
        <property code="min" name="Минимум" editor="integer" tooltip="Минимальное значение" />
        <property code="max" name="Максимум" editor="integer" tooltip="Максимальное значение" />
        <property code="step" name="Размер шага" editor="integer" />
        <property code="editable" name="Редактируемое" editor="boolean" />

        <property code="alignment" name="Выравнивание" editor="position" />

        <property code="arrowsStyle" name="Стиль стрелок" editor="enum">
            <variants>
                <variant value="RIGHT_VERTICAL">Справа, Вертикальные</variant>
                <variant value="RIGHT_HORIZONTAL">Справа, Горизонтальные</variant>
                <variant value="LEFT_VERTICAL">Слева, Вертикальные</variant>
                <variant value="LEFT_HORIZONTAL">Слева, Горизонтальные</variant>
                <variant value="SPLIT_VERTICAL">Сверху и снизу</variant>
                <variant value="SPLIT_HORIZONTAL">Слева и справа</variant>
            </variants>
        </property>
    </properties>
</element>