<behaviour extends="BehaviourSpec">
    <properties>
        <property name="Начальная сцена" code="initialScene" editor="form" tooltip="Вы можете подгрузить другую форму в сцену и сделать ее начальной" />
        <property name="Автозапуск" code="autoplay" editor="boolean" tooltip="Проигрывать всю сцену при старте" />
        <property name="Уровень гравитации" code="gravityType" editor="enum" tooltip="Величина гравитации (притяжения)">
            <variants>
                <variant value="JUPITER">Юпитер (25.8)</variant>
                <variant value="SATURN">Сатурн (11.3)</variant>
                <variant value="EARTH">Земля (9.8)</variant>
                <variant value="URANUS">Уран (9.0)</variant>
                <variant value="MARS">Марс (3.7)</variant>
                <variant value="MOON">Луна (1.6)</variant>
                <variant value="ZERO">Нулевой (0.0)</variant>
            </variants>
        </property>

        <property name="Направление гравитации" code="gravityDirection" editor="enum">
            <variants>
                <variant value="DOWN">Вниз</variant>
                <variant value="UP">Вверх</variant>
                <variant value="RIGHT">Вправо</variant>
                <variant value="LEFT">Влево</variant>
            </variants>
        </property>

        <property name="Кэшировать сцены" code="cacheScenes" editor="boolean" tooltip="Сохранять состояние ранее загруженных сцен не уничтожая их" />
    </properties>
</behaviour>