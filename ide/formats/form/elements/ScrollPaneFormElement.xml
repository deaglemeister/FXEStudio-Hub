<element extends="NodeFormElement">
    <properties>
        <property code="scrollX" name="Скролл по X" editor="float" tooltip="Дробное значение от 0 до 1" />
        <property code="scrollY" name="Скролл по Y" editor="float" tooltip="Дробное значение от 0 до 1" />
        <property code="hbarPolicy" name="Горизонтальный бар" editor="enum" defaultValue="AS_NEEDED">
            <variants>
                <variant value="AS_NEEDED">По необходимости</variant>
                <variant value="ALWAYS">Всегда</variant>
                <variant value="NEVER">Скрыть</variant>
            </variants>
        </property>
        <property code="vbarPolicy" name="Вертикальный бар" editor="enum" defaultValue="AS_NEEDED">
            <variants>
                <variant value="AS_NEEDED">По необходимости</variant>
                <variant value="ALWAYS">Всегда</variant>
                <variant value="NEVER">Скрыть</variant>
            </variants>
        </property>
        <property code="fitToWidth" name="Ширина контента" editor="boolean" tooltip="Ширина контента будет соответствовать ширине контейнера" />
        <property code="fitToHeight" name="Высота контента" editor="boolean" tooltip="Высота контента будет соответствовать высоте контейнера" />
    </properties>
</element>